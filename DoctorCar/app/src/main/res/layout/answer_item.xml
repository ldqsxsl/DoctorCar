<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher"
            android:id="@+id/answer_item_iv" />

        <TextView
            android:layout_toRightOf="@+id/answer_item_iv"
            android:id="@+id/answer_item_name_tv"
            android:text="TextView"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:layout_toRightOf="@+id/answer_item_name_tv"
            android:id="@+id/answer_item_description_tv"
            android:text="TextView"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/answer_item_time_tv"
            android:text="TextView"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/answer_item_content_tv"
            android:layout_alignLeft="@+id/answer_item_name_tv"
            android:layout_below="@+id/answer_item_iv"
            android:text="TextView"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


</RelativeLayout>