        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/answer_comment_header_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/car_brand_dazhong" />


        <TextView
            android:layout_toRightOf="@+id/answer_comment_header_iv"
            android:id="@+id/answer_comment_header_name_tv"
            android:text="TextView"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_toRightOf="@+id/answer_comment_header_name_tv"
            android:id="@+id/answer_comment_header_description_tv"
            android:text="TextView"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

