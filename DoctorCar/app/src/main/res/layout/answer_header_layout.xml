<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_bg"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="5dp"
            android:text="标签"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_bg"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="5dp"
            android:text="标签"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/answer_header_problem_tv"
            android:text="kjdfjiojidf"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/alpha_45_black"
                android:id="@+id/answer_header_focus_number_tv"
                android:text="26关注"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/answer_header_focus_number_tv"
                android:id="@+id/answer_header_dot_tv"
                android:text="·"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/answer_header_dot_tv"
                android:id="@+id/answer_header_answer_number_tv"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:textColor="@color/alpha_45_black"
                android:text="11回答"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                >

                <ProgressBar
                    android:id="@+id/answer_header_focus_pb"
                    style="?android:attr/progressBarStyleSmallTitle"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/answer_header_focus_tv"
                    android:text="关注"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_accent_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



            <!--<com.wbn.progress.button.CircularProgressButton-->
                <!--android:id="@+id/circular_progress_button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="64dp"-->
                <!--android:textColor="@color/cpb_white"-->
                <!--android:textSize="14sp"-->
                <!--app:cpb_cornerRadius="8dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--app:cpb_textIdle="关注"-->
                <!--app:cpb_textComplete="已关注"-->
                <!--app:cpb_textError="错误"-->
                <!--/>-->

        </RelativeLayout>

    <View style="@style/line_horizontal_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer_invited_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:text="邀请回答"/>

            <View style="@style/line_vertical_style"/>

            <TextView
                android:id="@+id/answer_add_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center"
                android:text="添加回答"/>

        </LinearLayout>

    </LinearLayout>



