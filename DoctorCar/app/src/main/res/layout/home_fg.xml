<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_appbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

       <com.doctorcar.mobile.view.banner.Banner
            android:id="@+id/banner"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="最新提问" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="更多" />
        </RelativeLayout>

        <View style="@style/line_horizontal_style"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_fg_new_ask_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="优质文章" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="更多" />
        </RelativeLayout>

        <View style="@style/line_horizontal_style"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_fg_article_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="答题之星" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="更多" />
        </RelativeLayout>

        <View style="@style/line_horizontal_style"/>

        <com.doctorcar.mobile.view.BetterRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/home_fg_answer_brv"
            />

    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="优质专栏" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"
                        android:text="更多" />
                </RelativeLayout>


                <View style="@style/line_horizontal_style"/>

                <com.doctorcar.mobile.view.BetterRecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/home_fg_zhuanlan_brv"
                    />

            </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="最新招聘" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="更多" />
        </RelativeLayout>

        <View style="@style/line_horizontal_style"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="购车指南" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="更多" />
        </RelativeLayout>

        <View style="@style/line_horizontal_style"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>